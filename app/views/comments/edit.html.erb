<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10, bw">
    <h2>コメントを編集する</h2>
    <p id="notice"><%= notice %></p>

    <%= form_for(@comment, url:inst_comment_path) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content, class:'form-control' %>
      <br>
      <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>


    <%= link_to "一覧画面にもどる", inst_path(@comment.inst.id) %>
  </div>
</div>